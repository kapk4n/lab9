<h1>Sign In</h1>
  <%= form_with url: sessions_edit_path do |form| %>

    <div class="mb-3">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", placeholder: "student@bmstu.ru" %>
    </div>
    <div class="mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", placeholder: "password"%>
    </div>


    <div class="mb-3">
      <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>

<% end %>